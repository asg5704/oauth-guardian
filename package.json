{
  "name": "oauth-guardian",
  "version": "0.1.0",
  "description": "A CLI tool and npm package that audits OAuth 2.0 implementations against OWASP, NIST, and RFC specifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "oauth-guardian": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "oauth",
    "oauth2",
    "security",
    "audit",
    "nist",
    "owasp",
    "pkce",
    "compliance",
    "authentication",
    "cli"
  ],
  "author": "Alexander Garcia <asg5704@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asg5704/oauth-guardian.git"
  },
  "bugs": {
    "url": "https://github.com/asg5704/oauth-guardian/issues"
  },
  "homepage": "https://github.com/asg5704/oauth-guardian#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/handlebars": "^4.0.40",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axios-mock-adapter": "^2.1.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1",
    "ora": "^9.0.0",
    "zod": "^4.1.12"
  }
}
